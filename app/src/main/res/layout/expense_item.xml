<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:elevation="8dp"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="#CDEDF1">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imgAvatar"
            android:contentDescription="Avatar"
            tools:ignore="ContentDescription,HardcodedText"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:backgroundTint="#33AEE6"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvNameExpense"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:text="Tien nha tro"
            tools:ignore="HardcodedText"
            android:layout_toEndOf="@id/imgAvatar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2,000,000"
            tools:ignore="HardcodedText"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_toEndOf="@id/imgAvatar"
            android:layout_below="@id/tvNameExpense"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tvPriceExpense"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tien nha tro phai dong hang thang"
            tools:ignore="HardcodedText"
            android:textSize="20sp"
            android:textStyle="italic|bold"
            android:layout_toEndOf="@id/imgAvatar"
            android:layout_below="@id/tvPriceExpense"
            android:id="@+id/tvDesExpense"
            android:layout_marginStart="5dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>


